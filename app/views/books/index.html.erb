<h1>Books</h1>
  <% @users.zip(@books) do |user, book| %>
  <%= link_to user_path(user.id) do %>
  <%=attachment_image_tag user, :profile_image, :fill, 60, 60, fot: "jpg", fallback: "no_image.jpg" %>
  <% end %>
  <p>title</p>
  <span><%= link_to book_path(book) do %>
         <%= book.title %></span>
         <% end %>
  <p>opinion</p>
  <span><%= book.body %></span>
  <% end %>

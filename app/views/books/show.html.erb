<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
<h3>User info</h3>
<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fot: "jpg", fallback: "no_image.jpg" %>
<table class="table">
    <tbody>
    <tr></tr>
    <tr>
    <th>name</th>
    <th><%= @user.name %></th>
    </tr>
    <th>introduction</th>
    <th><%= @user.introduction %></th>
    </tr>
    </tbody>
    </table>
<div class="row">
<%= link_to edit_user_path(@user.id), class:"btn btn-outline-secondary btn-block" do %>
<i class="fas fa-user-cog"></i>
<% end %>
</div>
<h3>New book</h3>
<%= render "books/newbook", book: @newbook %>
</div>
<div class="col-md-8 offset-md-1">
<h3>Book detail</h3>
<table class="table table-striped table-inverse">
<tbody>
 <tr>
 <td>
  <%= link_to user_path(@user) do %>
  <%=attachment_image_tag @user, :profile_image, fot: "jpg", fallback: "no_image.jpg", size: "40x40" %><br>
  <%= @user.name %></td>
  <% end %>
<td><%= @book.title %></td>
<td><%= @book.body %></td>
<td>コメント数:<%=@book.book_comments.count %></td>
 <% if @book.user_id == current_user.id %>
<td><%= link_to "Edit", edit_book_path(@book), class:"btn btn-success" %></td>
<td><%= link_to "Destroy", book_path(@book), method: :delete, class:"btn btn-danger", "data-confirm" => "本当に削除しますか" %></td>
<% end %>
</tr>
</tbody>
</table>
<div class="comments">
  <% @book.book_comments.each do |book_comment| %>
  <table>
    <tbody>
      <tr>
   <td><%=attachment_image_tag book_comment.user, :profile_image, fot: "jpg", fallback: "no_image.jpg", size: "40x40" %></br>
  <%= book_comment.user.name %></td>
  <td><%= book_comment.comment %></td>
  <% if book_comment.user.id == current_user.id %>
    <td><%= link_to "destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, class:"btn btn-danger" %></td>
    </tr>
    <tbody>
  <% end %>
</table>
  <% end %>
</div>
<div class="form-group">
  <%= form_with(model:[@book, @book_comment], local: true) do |f| %>
  <%= f.text_area :comment, rows:"5", class:"form-control" %>
  <%= f.submit "送信" %>
  <% end %>
</div>
</div>
</div>


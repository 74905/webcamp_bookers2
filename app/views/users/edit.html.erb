<h1>user info<h1>
  <%= form_with model:@user, local:true do |f| %>
  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"name" %>
  <label for="inputImage">Image</label>
  <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
  <%= f.attachment_field :profile_image, placeholder: "Image" %>
  <label for="inputoBody">Intodaction</label>
  <%= f.text_field :body, autofocus: true, id:"inputBody", placeholder:"body" %>
  <%= f.submit "Update User" %>
  <% end %>